<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="25dp"
        android:orientation="vertical"
        android:gravity="start|center_vertical">

    </LinearLayout>

    <!-- Timeline indicator -->
    <View
        android:id="@+id/view_timeline_indicator"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <!-- Timeline dot -->
    <View
        android:id="@+id/view_timeline_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/circle_shape"
        android:layout_marginStart="-6dp"
        android:layout_gravity="center_vertical"/>

    <!-- Content Layout -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:gravity="start|center_vertical"
        android:layout_margin="14dp"
        android:background="@drawable/news_list_shape">

        <!-- TextBox -->
        <TextView
            android:id="@+id/tvLocationKeyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keyword"
            android:layout_gravity="start"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="5dp"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News Title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:background="@drawable/news_title_shape" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publication Date"
            android:textSize="14sp"
            android:paddingLeft="5dp"/>
    </LinearLayout>
</LinearLayout>
